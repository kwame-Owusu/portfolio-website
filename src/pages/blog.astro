--- 
import Post from '../components/Post.astro';
import Navigation from '../components/Navigation.astro';
import UsesLayout from '../layouts/UsesLayout.astro';
import Footer from '../components/Footer.jsx';

---
<UsesLayout title='Blog-page'>
  <Navigation />
  <main>
    <section class="hero">
      <h1>Welcome to my blog</h1>
    </section>
    
    <section class="hero-description">
      <p>
        This is my blog, I will be writing about all sorts of things in this page,
        ranging from programming and technology all the way to literature and my faith.
        This will serve as journal for my improvement in programming and my other hobbies.
      </p>
      <hr class="hero-separator">
    </section>

    <section class="blog-items">
      <div class="container">
        <Post 
        title='Creation of my personal website with Astro'
        description='How did I come about creating my website with Astro....'
        date='April 4th, 2024'
        href='/posts/blog-1'

        
        />
      </div>

    </section>
    


  
  <Footer />
  </main>
  
  

</UsesLayout>


<style>
	main {
    font-size: 1rem;
		margin: 0;
    padding: 0;
		color: white;
		line-height: 1.7rem;
	}
  hr{
    color: white;
    margin-top: 1rem;
  }

  .hero {
  background-image: url('/assets/uses-hero.jpg');
  background-size: cover;
  background-position: center;
  color: white;
  text-align: center;
  height: 60vh;
  display: flex; 
  justify-content: center;
  align-items: center; 
}

.hero-description{
  overflow-wrap: break-word;
  margin: auto;
	width: 900px;
	max-width: calc(100% - 2rem);
  margin-top: 25px;
  padding-left: 1rem;
  padding-right: 1rem;
}

.hero-description p{
 text-indent: 0.5rem;
}


.blog-items{
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 1.75rem;
}
.container {
  text-align: center;
  display: grid;
  grid-template-columns: repeat(1, minmax(0, 1fr));
  gap: 2rem;
}


@media (max-width: 770px){
  .container{
    grid-template-columns: repeat(1, minmax(0, 1fr))
  }
  
}


</style>