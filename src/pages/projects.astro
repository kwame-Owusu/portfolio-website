--- 
import Project from '../components/Project.astro';
import Navigation from '../components/Navigation.astro';
import UsesLayout from '../layouts/UsesLayout.astro';
import Footer from '../components/Footer.jsx';
---
<UsesLayout title='Projects-Page'>
    <Navigation />
    <main>
      <section class="hero">
        <h1>Showcase of projects I created</h1>
      </section>
  
      <section class="hero-description">
        <p>
        This page contains some projects that I have done, clicking on the arrow will send you to my github where the project is written about in detail.
        </p>
        <hr class="hero-separator">
      </section>

      <section class="project-items">
        <div class="container">
          <Project 
          name='Pomodoro Timer'
          stack='python (customtkinter)'
          href='https://github.com/kwame-Owusu/Pomodoro'
          image='assets/pomodoro.png'
          />

          <Project 
          name='Password Manager'
          stack='python (ctk, Cryptography.Fernet)'
          href='https://github.com/kwame-Owusu/Password-Manager'
          image='assets/PM.png'
          />
        </div>

      </section>
   
    </main>
  
    <Footer />
</UsesLayout>


<style>


main {
  font-size: 1rem;
  margin: 0;
  padding: 0;
  color: white;
  line-height: 1.7rem;
}
.hero {
background-image: url('/assets/uses-hero.jpg');
background-size: cover;
background-position: center;
color: white;
text-align: center;
height: 60vh;
display: flex; 
justify-content: center;
align-items: center; 
}
.hero-description{
overflow-wrap: break-word;
margin: auto;
width: 900px;
max-width: calc(100% - 2rem);
margin-top: 25px;
padding-left: 1rem;
padding-right: 1rem;
}
.hero-description p{
text-indent: 1rem;
}
.hero-separator{
color: white;
margin-top: 15px;
}
.project-items{
display: flex;
justify-content: center;
align-items: center;
margin-top: 1.75rem;
}
.container{
text-align: center;
display: grid;
grid-template-columns: repeat(2, minmax(0, 1fr));
gap: 2rem;
text-align: left;
}


@media (max-width: 770px){
.container{
  grid-template-columns: repeat(1, minmax(0, 1fr))
}

}

</style>
