<style>
.body-container {
    color: var(--body);
    display: flex;
    flex-flow: column;
    margin: 0 auto;
    max-width: 650px;
    width: 100%;
  }

  .user-about{
    margin-bottom: 50px;
  }

  
  h1 {
    font-family: var(--header-font);
    font-size: 1.9rem;
    margin-bottom: 28px;
  }

  p {
    line-height: 1.75em;
  }

  .devices-container{
    margin-bottom: 24px;
  }

  @media(max-width: 673px){
    .devices-container{
      margin-left: 10px;
      margin-right: 10px;
    } 
  }

</style>

