<style>
  body {
    color: white;
  }

  .body-container {
    flex: 1;
    display: flex;
    flex-flow: column;
    margin: 0 auto;
    max-width: 650px;
    width: 100%;
    border: 1px solid red;
  }

  h1 {
    font-family: var(--header-font);
    font-size: 1.9rem;
    margin-bottom: 28px;
  }

  p {
    line-height: 1.7em;
  }

  .about {
    font-size: 1rem;
  }

  a.link {
    text-decoration: none;
    color: white;
    border-bottom-width: 2px;
    border-bottom-style: solid;
    border-bottom-color: var(--grey-700);
    transition: border-bottom-color 0.2s ease-in-out;
  }

  a.link:hover {
    border-bottom-color: var(--grey-600);
  }

	.section{
		margin-top: 50px;
	}

	.sub-heading{
		font-weight: 700;
		font-size: 1.2rem;
		line-height: 1.2rem;
		margin-bottom: 24px;
		color: var(--subtext);
	}
	#projects-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 40px;
  margin-top: 24px;
}

.project-grid-item {
  padding: 16px;
  border: 1px solid var(--grey-200);
  border-radius: 8px;
  transition: transform 0.3s ease;
}
.title {
  font-weight: bold;
  padding: 4px 8px;
  margin-left: -8px;
  border-radius: 4px;
  color: var(--white);
  transition: background 0.1s ease-in-out, transform 0.25s ease-in-out;;
}

.title:hover {
  background: rgba(255, 255, 255, 0.1);
  cursor: pointer;
}

.arrow {
  margin-right: 1px;
  vertical-align: middle;
}

.description {
  margin-top: 8px;
  color: var(--subtext);
}

</style>
