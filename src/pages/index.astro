---
import Layout from '../layouts/Layout.astro';
import Footer from '../components/Footer.jsx';
import Paragraph from '../components/paragraph.js'
import { BioSection, BioYear } from '../components/bio.jsx'
import Navigation from '../components/Navigation.astro';
import Socials from '../components/socials.jsx'
---

<Layout title="Kwame-Homepage">
	<Navigation/>
	<main>
		<section class="landing-page animate__animated animate__fadeInDown">
		<div  class="container">
			<div> <img class="profile-pic"  src="assets/profile-pic.jpg" alt="profile picture"> </div>
			<div class="name-descriptor-container">
        <div class="name"><h1>Kwame Owusu</h1> </div>
        <div class="descriptor"><p>Digital Craftsman</p></div>
    </div>
		</div>
		</section>
		
		<section class="who-i-am animate__animated animate__fadeInUp">
				
				<div class="about-paragraph">
					<h1 class="section-underscore">About me</h1>
					<Paragraph> Hi there!, I'm Kwame, a SWE student in the UK but originally from Ghana, I have a passion for building all sorts of digital things,
						hence the name "Digital Craftsman", I like coding and creating fun things with code, sometimes even solving some mundane problems.</Paragraph>
				</div>
		</section>



		<section class="Bio  animate__animated animate__fadeInUp" >
			<h1 class="section-underscore">Bio</h1>
			<BioSection>
				<BioYear>2003</BioYear>
				Born in Kumasi , Ghana.
			</BioSection>
			<BioSection>
				<BioYear>2022</BioYear>
				I started coding and wrote my first "hello world" in Python.
			</BioSection>
			<BioSection>
				<BioYear>2023 to present</BioYear>
				I've been studying Software Engineering at university.
			</BioSection>
		</section>

		
		<section class="what-i-like  animate__animated animate__fadeInUp">
		
			<div class="underscore-animation">
			<h1 class="section-underscore">I ü§ç</h1>
			<Paragraph>I have a passion for reading japanese literature and manga. My favourite Book is <a href="https://www.goodreads.com/book/show/194746.No_Longer_Human"  target="_blank"><i>'No Longer Human' by Osamu Dazai</i></a>, and 
				<a href="https://myanimelist.net/manga/656/Vagabond" target="_blank"><i>'Vagabond' by Takehiko Inoue</i></a> stands out as my favourite manga. I also enjoy playing FPS games and excel at them.
			</Paragraph>
		</div>
		</section>
		<Socials />
		<Footer/>
		
	</main>

</Layout>


<style>

	main {
		margin: auto;
		width: 900px;
		max-width: calc(100% - 2rem);
		color: white;
		font-size: 18px;
		line-height: 1.6;
	}

	@media (max-width:476px){
		main{
			font-size: 15px;
		}
	}

	
	
	.profile-pic{
		display: inline-block;
		max-width: 150px;
		border-radius: 150px;
	}
	

	.container {
        display: flex;
        align-items: center; /* Align items vertically */
    }

    .name-descriptor-container {
        margin-left: 30px; /* Adjust margin as needed */
    }

    .name h1 {
        margin: 0; /* Remove default margin of h1 */
        margin-bottom: 5px; /* Adjust margin between name and descriptor */
    }

    .descriptor p {
        margin: 0; /* Remove default margin of p */
    }

		.landing-page{
			margin-top: 90px;
			margin-bottom: 50px;
		}

		.landing-page {
    padding: 20px; /* Adjust as needed */
}

.container {
    display: flex;
    align-items: center;
}

.profile-pic {
    width: 150px; /* Adjust image size as needed */
    height: auto;
    margin-right: 20px; /* Adjust spacing between image and text as needed */
}

.name-descriptor-container {
    flex-grow: 1;
}

.name, .descriptor {
    margin: 0; /* Reset margin to avoid extra spacing */
}

/* Ensure responsive behavior for smaller screens */
@media screen and (max-width: 400px) {
    .container {
        flex-direction: column; /* Stack items vertically on smaller screens */
        align-items: flex-start; /* Align items to the start of the container */
    }

    .profile-pic {
        margin: 0; /* Remove margin for profile picture */
    }

    .name-descriptor-container {
        margin-top: 10px; /* Add margin between profile picture and text */
    }
}

		.section-underscore {
		display: inline; /* Ensures that the border only covers the width of the text */
    border-bottom: 4px solid #6196A6; /* Adjust thickness and color as needed */
    
	 }
		/* You can adjust the margin or padding values according to your preference */
	.about-paragraph .section-underscore {
    margin-bottom: 10px; /* Adds margin below the h1 */
	}

	.about-paragraph .paragraph {
    margin-top: 10px; /* Adds margin above the paragraph */
	}


		.Bio{
			margin-top: 50px;
			margin-bottom: 50px;
		}


.underscore-animation a {
    color: inherit;
    text-decoration: none;
    position: relative;
    transition: color 0.3s ease-in-out, background-color 0.3s ease-in-out; /* Added background-color transition */
    padding: 2px 4px; /* Add padding for a subtle background effect */
		border-radius: 10px;
}

.underscore-animation a::before {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: auto; /* Adjusted width */
    height: 1.5px;
    background-color: #6196A6; /* Color of the line */
    transform: scaleX(0); /* Initially hidden */
    transition: transform 0.3s ease-in-out;
}

.underscore-animation a:hover::before {
    transform: scaleX(1); /* Fully visible on hover */
}

.underscore-animation a:hover {
    color: #86c0d2; /* Change color on hover */
    background-color: white; /* White background on hover */
}
</style>
