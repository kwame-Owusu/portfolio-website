---
import { Image } from "astro:assets";

interface Props {
	name: string;
	stack: string;
	href: string;
  image: string;
}

const { href, name, stack, image, } = Astro.props;

---

<div class="container">
  <div class="image-container">
  <div class="device-img"><img src={image} decoding="async" alt="device image"></div>
  </div>
 
  <div class="project-name"><hr/><p>{name}</p></div>
  <div class="stack"><p>{stack}</p></div>
  <div class="link">
  <a href={href} target="_blank">
      <svg class="social-arrow"  xmlns="http://www.w3.org/2000/svg" width="30" height="30" viewBox="0 0 24 24" fill="white">
        <polygon points="7 7 15.586 7 5.293 17.293 6.707 18.707 17 8.414 17 17 19 17 19 5 7 5 7 7"/>
      
      </svg>
  </a>
  </div>


</div>



<style>

  p,a{
    margin-left: 10px;
  }
  hr{
    color: rgba(203,213,225, 1);
  }
  .container{
   margin-bottom: 0.75rem;
   border: 2px solid rgba(203,213,225, 0.7);
   border-radius: 5px;
  }
  
  img{
    display: block;
    object-fit: cover;
    width: 350px;
    height: 300px;
  }
  .project-name{
    font-weight: 700;
    margin-top: 0.5rem;
    font-size: 1.25rem;
    line-height: 1.75rem
  }
  .stack{
    opacity: 0.7
  }


  .image-container{
    margin: 10px;
  }

  a{
    color: inherit; 
    text-decoration: none;
  }
.link{
  position: relative;
  color: White;
}
.social-arrow {
  transition: transform 0.3s ease-in-out; /* Add a transition for smooth animation */
  }

.social-arrow:hover {
  transform: translateY(-5px); /* Move the SVG element 5 pixels upward on hover */
  }
 
  
@media (max-width: 768px) {
  img{
    width: 100%;
    height: auto;
    
  }

  .container{
    margin: 10px
  }
}
</style>