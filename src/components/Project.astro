---
interface Props {
  projectName: string;
  projectDesc: string;
  projectLink: string;
}
const {projectName, projectDesc, projectLink} = Astro.props;
---


<div class="project-grid-item">
  <a
    href={projectLink}
    class="project-title"
    target="_blank"
  >
    <svg
      class="arrow"
      xmlns="http://www.w3.org/2000/svg"
      width="20"
      height="20"
      viewBox="0 0 24 24"
      fill="white"
    >
      <polygon
        points="7 7 15.586 7 5.293 17.293 6.707 18.707 17 8.414 17 17 19 17 19 5 7 5 7 7"
      ></polygon>
    </svg>
    {projectName}
  </a>
  <div class="project-desc">  
    {projectDesc}
  </div>




  <style>
    
  .project-grid-item {
    font-size: 1.2rem;
    margin-bottom: 5px;
    border: 1px solid var(--grey-200);
    border-radius: 8px;
    transition: transform 0.3s ease;
  }

  .project-title {
    letter-spacing: .50px;
    font-weight: bold;
    padding: 4px 8px;
    margin-left: -8px;
    opacity: 1;
    color: var(--white);
    transition: opacity 0.23s ease;
  }

  .project-title:hover {
    opacity: 0.7;
  }

  .project-title:hover .arrow {
    transform: translateY(-5px);
    cursor: pointer;
  }

  .arrow {
    transition: transform 0.25s ease;
    margin-right: 2px;
    vertical-align: middle;
  }

  .project-desc{
    text-decoration-style: wavy;
    text-decoration-color: white;
    margin-top: 8px;
    color: var(--subtext);
  }

  @media(max-width: 499px){
    .project-grid-item{
      font-size: 1rem;
    }
  }

  </style>