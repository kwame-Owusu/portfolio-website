---
interface Props {
  bookImage: string;
  bookName: string;
  bookStatus: string;
  bookAuthor: string;
  bookLink: string;
}
const { bookImage, bookAuthor, bookName, bookStatus, bookLink } = Astro.props;
---

<div class="book-container">
  <a href={bookLink} target="_blank" rel="noopener noreferrer" class="book-item">
    <div class="book-img">
      <img src={bookImage} alt={`${bookName} by ${bookAuthor}`} loading="lazy" />
    </div>
    <div class="book-details">
      <p class="book-author">{bookAuthor}</p>
      <p class="book-name">{bookName}</p>
      <div class="book-status">{bookStatus}</div>
    </div>
  </a>
</div>

<script>
  let bookStatuses = document.querySelectorAll(".book-status");
  bookStatuses.forEach((bookStatus) => {
    let statusText = bookStatus.textContent?.trim();
    switch (statusText) {
      case "Reading":
        bookStatus.classList.add("reading");
        break;
      case "To Read":
        bookStatus.classList.add("to-read");
        break;
      case "Read":
        bookStatus.classList.add("read");
        break;
      default:
        bookStatus.classList.add("to-read");
        break;
    }
  });
</script>

<style>
  .book-container {
    border: 1px solid rgba(160, 160, 160, 0.2);
    background-color: rgba(77, 77, 77, 0.5);
    border-radius: 0.35rem;
    padding: 20px;
    margin: 0;
    margin-bottom: 20px;
    transition: background-color 0.23s ease-in-out;
  }
  .book-container:hover {
    background-color: rgba(77, 77, 77, 0.8);
  }
  .book-item {
    display: flex;
    flex-direction: row;
    text-decoration: none;
    color: inherit;
  }
  .book-details {
    display: flex;
    flex-direction: column-reverse;
    margin-top: 20px;
    padding-left: 20px;
    gap: 5px;
  }
  p.book-author {
    opacity: 0.7;
    font-size: 0.9rem;
  }
  p.book-name {
    font-size: 1rem;
  }
  .book-status {
    width: 75px;
    color: #333;
    font-size: 0.95rem;
    line-height: 1.25rem;
    border-radius: 0.25rem;
    padding-bottom: 0.25rem;
    padding-top: 0.125rem;
    padding-left: 0.375rem;
    padding-right: 0.375rem;
    border: 0.1rem solid #e5e7eb;
  }
  .book-status.reading {
    background-color: #efdcab;
  }
  .book-status.read {
    background-color: #c7db9c;
  }
  .book-status.to-read {
    background-color: #fdab9e;
  }
  .book-img {
    width: 150px;
    height: 200px;
    flex-shrink: 0;
  }
  .book-img img {
    border-radius: 2px;
    opacity: 0.9;
    display: block;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  @media (max-width: 973px) {
    .book-container {
      padding: 10px;
    }
    p.book-name {
      font-size: 0.8rem;
    }
    p.book-author {
      font-size: 0.7rem;
    }
  }
  @media (max-width: 589px) {
  .book-item {
    flex-direction: column;
    align-items: center;
  }

  .book-img {
    width: 100px;
    height: 120px;
    margin-bottom: 10px;
  }

  .book-details {
    padding-left: 0;
    margin-top: 0;
    flex-direction: column; 
    align-items: flex-start; 
    width: 100%;
    gap: 4px;
  }

  .book-status {
    font-size: 0.65rem;
    padding: 0.1rem 0.3rem;
    margin-bottom: 2px; 
  }

  p.book-name {
    font-size: 0.75rem;
    line-height: 1.2;
    text-align: left;
  }

  p.book-author {
    font-size: 0.65rem;
    text-align: left;
  }

  .book-container {
    padding: 8px;
  }
}

</style>