---
interface Props {
  title: string;
  date: string;
  href: string;
  img: string;
}
const { href, title, date, img} = Astro.props;
---

<div class="post-container">
  <div class="post-item">
    <a href={href}><p><i>{title}</i></p></a>
    <span>{date}</span>
    <img src={img} alt="blog img" class="blog-img">
  </div>
</div>


<style>
.blog-img{
  border-radius: 5px;
    height: 150px;
    left:26%;
    object-fit: cover;
    opacity: 0;
    pointer-events: none;
    position: absolute;
    transition: opacity .2s ease-in;
    width: 250px;
}

.post-item:hover .blog-img{
  opacity: 0.7;
}

@media(max-width: 1000px){
  .blog-img{
    display: none;
  }
}



.post-container{
    display: flex;
    flex-direction: column;
    gap: 24px;
  

  }
  .post-container time{
    color: var(--subtext);
  }

 .post-item{
  margin: 0;
  opacity: 0.65;
  padding: 16px 0;
  justify-content: space-between;
  display: flex;
  align-items: center;
  border-bottom: 1px solid var(--highlight);
  gap: 24px;
  transition: opacity 0.25s ease-in-out, margin 0.25s ease-in-out;
 }
 
  .post-item:hover{
    margin-left: 10px;
    margin-right: 10px;
    opacity: 1;
  }

  .post-item p{
    font-size: 1.2rem;
  }
  
</style>